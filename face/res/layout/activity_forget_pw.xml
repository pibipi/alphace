<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="找回密码"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_below="@+id/r1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >

            <EditText android:textCursorDrawable="@drawable/tuli_cursor"
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="验证码"
                android:textColor="#b1b1b1"
                android:textColorHint="#b1b1b1"
                android:textSize="14sp" />

            <Button
                android:id="@+id/code_btn"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/code_back"
                android:gravity="center"
                android:text="点击获取"
                android:textColor="#b1b1b1"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="#b1b1b1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_below="@+id/r2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >

            <EditText android:textCursorDrawable="@drawable/tuli_cursor"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="新密码"
                android:inputType="textPassword"
                android:textColor="#b1b1b1"
                android:textColorHint="#b1b1b1"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/pw_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/password_selector"
                android:button="@null"
                android:checked="false"
                android:visibility="invisible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="#b1b1b1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r4"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_below="@+id/r3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >

            <EditText android:textCursorDrawable="@drawable/tuli_cursor"
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="重复密码"
                android:inputType="textPassword"
                android:textColor="#b1b1b1"
                android:textColorHint="#b1b1b1"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/pw_btn2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/password_selector"
                android:button="@null"
                android:checked="false"
                android:visibility="invisible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="#b1b1b1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/r2"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="18dp" >

            <EditText android:textCursorDrawable="@drawable/tuli_cursor"
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="手机号"
                android:inputType="phone"
                android:textColor="#b1b1b1"
                android:textColorHint="#b1b1b1"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="#b1b1b1" />
        </RelativeLayout>

        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="91dp"
            android:background="@drawable/red_back"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="16dp" />

    </RelativeLayout>

</LinearLayout>